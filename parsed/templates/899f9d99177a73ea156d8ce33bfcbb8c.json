{
  "components/brand/show-more": "{{#if brand.facets}}\n    {{> components/faceted-search/show-more-facets brand}}\n{{/if}}\n",
  "components/faceted-search/show-more-facets": "<div class=\"modal-body\">\n    <h1 class=\"facet-quick-heading\">\n        {{all_facets}}\n    </h1>\n    <div class=\"form-field\" id=\"facetedSearch-filterItems\">\n        <input class=\"form-input\" type=\"search\" placeholder={{lang 'forms.search.search'}}>\n    </div>\n    <ul class=\"navList facetedSearch-optionColumns\">\n        {{#each facets}}\n            {{#if facet '===' ../all_facets}}\n                {{#each items}}\n                    <li class=\"navList-item\">\n                        <a\n                        href=\"{{url}}\"\n                        class=\"navList-action {{#if selected }} is-active {{/if}}\"\n                        rel=\"nofollow\"\n                        data-id=\"{{ id }}\"\n                        data-faceted-search-facet\n                        >\n                            {{{title}}}\n                            {{#if ../show_product_counts}}\n                                {{#if count}}\n                                    <span>({{count}})</span>\n                                {{/if}}\n                            {{/if}}\n                        </a>\n                    </li>\n                {{/each}}\n            {{/if}}\n        {{/each}}\n    </ul>\n</div>\n"
}